<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success</title>
    <!-- Include Axios library -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
 body {
    font-family: Arial, sans-serif;
    background: linear-gradient(45deg, #FF6B6B, #FFD166, #6BFF6B, #6BFFC5, #6BACFF, #D16BFF, #FF6B8B, #FFA07A, #3F51B5, #4CAF50);
    background-size: 400% 400%;
    animation: gradientAnimation 15s ease infinite;
    text-align: center;
    padding: 20px;
}

@keyframes gradientAnimation {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

h1 {
    color: #007BFF;
}

p {
    font-size: 18px;
    margin: 10px 0;
}

.container {
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    padding: 20px;
    border-radius: 5px;
    margin: 0 auto;
    max-width: 400px;
}

.btn {
    background-color: #007BFF;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s;
    text-decoration: none;
    margin-right: 10px;
}

.btn-delete {
    background-color: #dc3545;
}

.btn-update {
    background-color: #28a745;
}

.btn:hover {
    background-color: #0056b3;
}

    </style>
</head>
<body>
    <div class="container">
        <h1>Success</h1>
        <p>Your product has been added successfully!</p>
        <% if (product) { %>
            <p><strong>Product Name:</strong> <%= product.name %></p>
            <p><strong>Quantity:</strong> <%= product.quantity %></p>
            <!-- Use a JavaScript function to send DELETE request using Axios -->
            <button class="btn btn-delete" onclick="deleteProduct('<%= product._id %>')">Delete</button>
            <!-- Add an "Update" button with a similar JavaScript function -->
            <button class="btn btn-update" onclick="updateProduct('<%= product._id %>')">Update</button>
        <% } %>
        <a href="/" class="btn">Back to Home</a>
    </div>

    <!-- Include a script to send the DELETE request using Axios -->
    <script>
        async function deleteProduct(productId) {
            if (confirm('Are you sure you want to delete this product?')) {
                try {
                    const response = await axios.delete(`/${productId}/delete`);
                    if (response.status === 200) {
                        console.log("Product deleted successfully");
                        window.location.href = '/'; // Redirect after successful deletion
                    } else {
                        console.error('Failed to delete product');
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            }
        }

        // Function for handling the update button (replace with your update logic)
    function updateProduct(productId) {
        // Redirect to the update route with the product ID
        window.location.href = `/${productId}/update`;
    }
    </script>
</body>
</html>
